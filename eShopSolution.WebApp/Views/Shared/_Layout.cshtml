    <script>
        show();

        function show() {
            const start = Date.now();
            let min, check;
            setTimeout(() => {
                min = Date.now() - start;
                if (min % 2 == 0)
                    check = true;
                else
                    check = false;
                check ? $('.slider--child').css('background-image', 'none') :
                    $('.slider--child').css('background-image', "url('/img/banner1_1.png')");;
            }, 2000);
            setTimeout(show, 3000);

        }

        window.onscroll = function () { scrollFunction() };

        function scrollFunction() {
            if (document.body.scrollTop > 200 || document.documentElement.scrollTop > 200) {
                document.querySelector(".header-main__menu").style.position = "fixed";
                document.querySelector(".header-main__menu").style.transition = "top 0.3s";
                document.querySelector(".header-main__menu").style.width = "100%";
                document.querySelector(".header-main__menu").style.zIndex = "3";
                document.querySelector(".sub-menu").style.top = "69.5%";
            } else {
                document.querySelector(".header-main__menu").style.top = "0px";
                document.querySelector(".header-main__menu").style.position = "static";
                document.querySelector(".header-main__menu").style.transition = "top 0.3s";
                document.querySelector(".header-main__menu").style.zIndex = "1";
                document.querySelector(".header-main__menu").style.maxWidth = "100%";
                document.querySelector(".sub-menu").style.top = "16%";

            }
        }
        if (performance.navigation.type == performance.navigation.TYPE_RELOAD) {
            document.body.scrollTop = 0;
            document.documentElement.scrollTop = 0;
        }
        $(".header-bookinfo").submit(function (e) {
            var form = $(this);
            var actionUrl = form.attr('action');
            var searchstr = $(".names").val();
            var searchstrs = parseInt($(".numbers").val());

            $.ajax({
                url: '@culture/Product/GetAlls',
                data: { "name": searchstr, "number": searchstrs },
                success: function (data) {
                    window.location.href = "/@culture/Product/GetAlls?name=" + searchstr + "&number=" + searchstrs;
                },
                error: function (data) {
                    window.location.href = "/@culture/Product/GetAlls?name=" + searchstr + "&number=" + searchstrs;
                }
            });

        });
        var form = document.getElementById(".login-form");
        function handleForm(event) { event.preventDefault(); }
        form.addEventListener('submit', handleForm);
    </script>
